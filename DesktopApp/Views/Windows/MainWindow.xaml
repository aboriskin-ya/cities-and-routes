<Window x:Class="DesktopApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopApp"
        xmlns:vm="clr-namespace:DesktopApp.ViewModels"
        xmlns:fa="http://schemas.fontawesome.com/icons/"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Program"/>
            <MenuItem Header="Program"/>
            <MenuItem Header="Program"/>
        </Menu>
        <DockPanel DockPanel.Dock="Right" Width="130">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Grid.Row="0"/>
                <Button Grid.Column="1" Grid.Row="0"/>
            </Grid>
        </DockPanel>
        <DockPanel DockPanel.Dock="Top">
            <Grid DockPanel.Dock="Left">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.05*" />
                    <ColumnDefinition Width="0.8*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="0.3*" />
                    <RowDefinition Height="0.3*" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>
                <Image x:Name="MapImage"
                       Source="{Binding MapImageSource}" 
                       Grid.Column="0" 
                       Grid.ColumnSpan="2" 
                       Grid.RowSpan="4"
                       Stretch="Fill"/>

                <Button Grid.Row="1" 
                        Template="{StaticResource ScalePlus}" 
                        Command="{Binding ZoomInCommand}"
                        CommandParameter="{Binding ElementName=MapImage}"
                        />
                
                <Button Grid.Row="2" 
                        Template="{StaticResource ScaleMinus}" 
                        Command="{Binding ZoomOutCommand}"
                        CommandParameter="{Binding ElementName=MapImage}"
                        />

            </Grid>
            
        </DockPanel>
    </DockPanel>
</Window>
