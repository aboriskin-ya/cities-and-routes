<Page x:Class="DesktopApp.Dialogs.SettingsDialog"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DesktopApp.Dialogs" xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="800"
      Title="Settings">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="180px"/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Rectangle Grid.Row="0" Grid.ColumnSpan="2" Height="30" VerticalAlignment="Top" ></Rectangle>
            <TextBlock Grid.Row="0"  Text="Display the image" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <TextBlock Grid.Row="1" Text="Display the graph" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>

            <CheckBox Grid.Row="0" Grid.Column="1" HorizontalContentAlignment="Center"  Background="GreenYellow" VerticalAlignment="Center"></CheckBox>
            <CheckBox  Grid.Row="1" Grid.Column="1" HorizontalContentAlignment="Left"  IsChecked="True" Background="Red" VerticalAlignment="Center"></CheckBox>


        </Grid>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="15px"/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition Width="490px"/>
            </Grid.ColumnDefinitions>
            <Rectangle Grid.ColumnSpan="3" Grid.RowSpan="3" Margin="15 20 15 10" Stroke="Black" StrokeThickness="2"></Rectangle>
            <TextBlock Grid.Column="0" Grid.Row="0" Text="City settings" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBlock Grid.Column="0" Grid.Row="1" Text="Size" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Slider x:Name="sldLineUp" Grid.Column="1" Grid.Row="1" VerticalAlignment="Center" ValueChanged="sldLineUp_ValueChanged" Maximum="10" TickPlacement="BottomRight" TickFrequency="1" IsSnapToTickEnabled="True"></Slider>
            <xctk:ColorPicker SelectedColor="Wheat"  x:Name="_colorPickerUp" Grid.Column="1" Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Top" Width="20"/>
            <TextBlock Grid.Column="0" Grid.Row="2" Text="Color" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <Ellipse x:Name="ellips" Grid.Column="3" Grid.Row="3" Stroke="Black" Width="20" Height="20" VerticalAlignment="Top" DataContext="{Binding ElementName=sldLineUp, Path=Value}">
                <Ellipse.Fill>
                    <SolidColorBrush Color="{Binding ElementName=_colorPickerUp, Path=SelectedColor}"/>
                </Ellipse.Fill>
            </Ellipse>
        </Grid>

        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="15px"/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition Width="490px"/>
            </Grid.ColumnDefinitions>
            <Rectangle Grid.ColumnSpan="3" Grid.RowSpan="3" Margin="15 20 15 10" Stroke="Black" StrokeThickness="2"></Rectangle>
            <TextBlock Grid.Column="0" Grid.Row="0" Text="Route settings" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBlock Grid.Column="0" Grid.Row="1" Text="Size" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Slider x:Name="sldLineDown" Grid.Column="1" Grid.Row="1" VerticalAlignment="Center" ValueChanged="sldLine_ValueChanged" Maximum="5" TickPlacement="BottomRight" TickFrequency="1" IsSnapToTickEnabled="True"></Slider>
            <xctk:ColorPicker SelectedColor="Wheat" x:Name="_colorPickerDown" Grid.Column="1" Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Top" Width="20"/>
            <TextBlock Grid.Column="0" Grid.Row="2" Text="Color" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top"/>

            <Line x:Name="lineColor" Grid.Column="2" Grid.Row="1" Grid.RowSpan="2" HorizontalAlignment="Center" X1="40" Y1="0" X2="130" Y2="40" VerticalAlignment="Center" StrokeThickness="{Binding ElementName=sldLineDown}">
                <Line.Stroke>
                    <SolidColorBrush Color="{Binding ElementName=_colorPickerDown, Path=SelectedColor}"/>
                </Line.Stroke>
            </Line>
        </Grid>


        <Button Grid.Row="3" Content="Save and Apply" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="30" FontWeight="Bold"/>

    </Grid>
</Page>
